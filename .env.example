# Polymarket US API Credentials
PM_API_KEY_ID=your-api-key-uuid-here
PM_PRIVATE_KEY=your-base64-private-key-here

# Trading mode
TRADING_MODE=paper

# Market selection
# - Auto-discovery (default): leave MARKET_SLUGS empty and set LEAGUES / MARKET_TYPES
# - Manual: set MARKET_SLUGS to a comma-separated list of market slugs
MARKET_SLUGS=
LEAGUES=nba,cbb
MARKET_TYPES=aec

# Sports Data (optional)
OPTICODDS_API_KEY=your-opticodds-key-here

# Alerting (optional)
DISCORD_WEBHOOK=https://discord.com/api/webhooks/xxx/yyy

# Discord monitoring bot (optional; used by `src/discord_bot.py`)
# IMPORTANT: never commit real bot tokens
DISCORD_BOT_TOKEN=your-discord-bot-token-here
DISCORD_CHANNEL_ID=123456789012345678
DISCORD_HEALTH_URL=http://localhost:8080/health

# Health check (default is fine; keep SG SSH-only and check via localhost over SSH)
HEALTH_HOST=0.0.0.0
HEALTH_PORT=8080

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
LOG_JSON=false
